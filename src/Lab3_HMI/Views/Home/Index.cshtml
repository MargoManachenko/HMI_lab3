@using Lab3_HMI.Models
@using Microsoft.EntityFrameworkCore.Metadata.Internal
@model List<Flight>
@{
    ViewData["Title"] = "Home Page";
}
<head>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.min.js"></script>


    <link rel="stylesheet" href="~/css/table.css" />
    <link rel="stylesheet" href="~/css/hints.css" />
    <link rel="stylesheet" href="~/css/search.css" />
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/js/flights.js"></script>
</head>




<div class="container">
    </br>
    <h2><center>Поиск багажа по фамилии пассажира</center>
    </h2> <br/>
    <div class="row">
        <div class="col-md-12">
            <div class="input-group" id="adv-search">
                <input type="text" name="passSurname" class="form-control" placeholder="Введите фамилию..."/>
                <div class="input-group-btn">
                    <div class="btn-group" role="group">
                        <div class="dropdown dropdown-lg">
                            <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-expanded="false"><span class="caret"></span></button>
                            <div class="dropdown-menu dropdown-menu-right" role="menu">
                                <form class="form-horizontal" role="form">
                                    <div class="form-group">
                                        <label for="filter">Сортировать по</label>
                                        <select class="form-control">
                                            <option value="0" selected>Номеру рейса</option>
                                            <option value="1">Названию компании</option>
                                            <option value="2">Дате прибытия</option>
                                            <option value="3">Дате отправления</option>
                                            <option value="4">Типу самолета</option>
                                        </select>
                                    </div>
                                    <div class="form-group">
                                        <label for="contain">Поиск по номеру багажа</label>
                                        <input class="form-control" type="text"/>
                                    </div>
                                    @Html.ActionLink("Search", "Search", "Travel", null, new {@class = "btn btn-primary", @id = "roundBtn"})
                                </form>
                            </div>
                        </div>
                        @Html.ActionLink("Search", "SearchByPassSurname", "Travel", null, new {@class = "btn btn-primary"})
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div>
    <a asp-action="AddFlight" class="btn btn-success" style="margin-top: 30px; margin-left:20px;">
        <span class="glyphicon glyphicon-plus"></span>  Добавить рейс
    </a>
</div>

<div>
    @if (Model != null && Model.Count != 0)
    {
        var count = 1;
        <table class="simple-little-table">
            <tr>
                <th><b>№ рейса</b></th>
                <th><b>Название авиакомпании</b></th>
                <th><b>Тип самолета</b></th>
                <th><b>Время отправления</b></th>
                <th><b>Точка отправления</b></th>
                <th><b>Точка прибытия</b></th>
                <th><b>Время прибытия</b></th>
            </tr>
            @foreach (var flight in Model)
                {
                <tr>
                    <td>@count.</td>
                    <td>@flight.CompanyName</td>
                    <td>@flight.AircraftType</td>
                    <td>@flight.DateOfStart</td>
                    <td>@flight.DepaturePoint</td>
                    <td>@flight.ArrivalPoint</td>
                    <td>@flight.DateOfFinish</td>
                    <td style="width:80px;">
                        <span class="table-up glyphicon glyphicon-arrow-up"></span>
                        <span class="table-down glyphicon glyphicon-arrow-down"></span>
                    </td>
                    <td>
                        <a class="glyphicon glyphicon-user tool_tip" asp-action="PassengersOfFlight" asp-route-flightId="@flight.Id" style="color:teal;">
                            <span class="custom info">
                                <img src="~/images/Info.png" alt="Информация" style="margin-left:-150px" height="48" width="48" />
                                <em>Информация</em>
                                Просмотр информации о пассажирах, багаж которых находится в данном рейсе
                            </span>
                        </a>
                    </td>
                    <td><a asp-action="EditFlight" asp-route-flightId="@flight.Id" class="glyphicon glyphicon-pencil" title="Редактировать" style="color:cornflowerblue;"></a></td>
                    <td>
                        <a asp-action="DeleteFlight" asp-route-flightId="@flight.Id" class="glyphicon glyphicon-trash" title="Удалить" style="color:crimson;"></a>
                    </td>
                </tr>
                count++;
            }
        </table>
    }
    else
    {
        <h3>В системе отсутствуют данные о рейсах</h3>
    }
</div>

<style>
    table {
        margin-top: 40px;
    }
    a {
        cursor: pointer;
    }

    .planeIcon {
        -webkit-transform: rotate(90deg); /* Chrome y Safari */
        -moz-transform: rotate(90deg); /* Firefox */
        filter: progid:DXImageTransform.Microsoft.BasicImage(rotation=3); /* Internet Explorer */
        -o-transform: rotate(90deg); /* Opera */
        display: inline-block;
        padding-left: 8px;
        vertical-align: text-top;
        text-indent: 0px;
    }

    .input-group .form-control:last-child, .input-group-addon:last-child, .input-group-btn:last-child > .btn, .input-group-btn:last-child > .btn-group > .btn, .input-group-btn:last-child > .dropdown-toggle, .input-group-btn:first-child > .btn:not(:first-child), .input-group-btn:first-child > .btn-group:not(:first-child) > .btn {
        border-top-left-radius: 0;
        border-bottom-left-radius: 0;
        height: 34px;
    }

    .btn-group .btn {
        border-radius: 0;
        margin-left: -1px;
        height: 34px;
    }

    input, select, textarea {
        max-width: 100%;
    }

    /*.form-group {
        margin-top: 5%;
        margin-bottom: 10%;
    }*/
    .form-horizontal {

        padding: 5% ;
        height: 50%;

    }
    #roundBtn {
        border-radius: 4px !important;
    }
</style>
<script>
    $(document).ready(function (e) {
        $('.search-panel .dropdown-menu').find('a').click(function (e) {
            e.preventDefault();
            var param = $(this).attr("href").replace("#", "");
            var concept = $(this).text();
            $('.search-panel span#search_concept').text(concept);
            $('.input-group #search_param').val(param);
        });
    });
</script>